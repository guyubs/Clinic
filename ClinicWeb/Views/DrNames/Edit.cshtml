@model ClinicWeb.Models.DrName

@{
    ViewData["Title"] = "Edit";
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success">@TempData["success"]</div>
}

<h1>Edit</h1>

<h4>DrName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
